<media:thumbnail url="http://mmbiz.qpic.cn/mmbiz/CibxU6OVroZKYXYkoMdxj16TMbK0wiclibdxh0Kld0MG1ZO5aOXiaicnloF4GYcziblria2kQ48ZhYicvChANV6hibVFsOQ/0?wx_fmt=jpeg" />
